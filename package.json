{
	"name": "news-feed-eradicator",
	"title": "News Feed Eradicator for Facebook",
	"id": "jid1-oWTXWc3MRzRuiQ",
	"description": "Find yourself spending too much time on Facebook? Eradicate distractions by replacing your entire news feed with an inspiring quote",
	"author": "Jordan West",
	"license": "MIT",
	"version": "2.3.1",
	"lint-staged": {
		"src/**/*.{js,ts}": [
			"eslint --max-warnings=0",
			"prettier --write"
		],
		"src/**/*.{css,html,json,md}": [
			"prettier --write"
		],
		"scripts/**/*.js": [
			"prettier --write"
		],
		"*.md": [
			"prettier --write"
		]
	},
	"scripts": {
		"prepare": "husky",
		"format": "prettier --write \"./src\"",
		"format:check": "prettier --check \"./src\"",
		"check": "tsc --noEmit",
		"copy-assets": "node scripts/copy-assets.js",
		"build": "npm run copy-assets && NODE_ENV=production rollup -c",
		"dev": "npm run copy-assets && rollup -c --watch",
		"clean": "rm -rf dist build node_modules",
		"package": "mkdir -p dist && (cd build && zip -r ../dist/NewsFeedEradicator_$(git describe --always --tag).zip .)",
		"package-source": "mkdir -p dist && git archive --output=dist/NewsFeedEradicator_source_$(git describe --always --tag).zip HEAD",
		"lint": "eslint \"src/**/*.{js,ts}\"",
		"lint:fix": "eslint \"src/**/*.{js,ts}\" --fix",
		"test": "vitest run",
               "test:e2e": "xvfb-run -a playwright test"
       },
	"devDependencies": {
		"@eslint/css": "^0.8.1",
		"@eslint/js": "^9.28.0",
		"@eslint/json": "^0.12.0",
		"@eslint/markdown": "^6.4.0",
		"@playwright/test": "^1.52.0",
		"@rollup/plugin-commonjs": "^11.0.2",
		"@rollup/plugin-replace": "^2.3.1",
		"@rollup/plugin-typescript": "^4.0.0",
		"eslint": "^9.28.0",
		"globals": "^16.2.0",
		"husky": "^9.1.7",
		"lint-staged": "^16.1.0",
		"playwright": "^1.52.0",
		"prettier": "^2.0.5",
		"redux": "^4.0.5",
		"redux-thunk": "^2.3.0",
		"rollup": "^2.2.0",
		"rollup-plugin-css-only": "^2.0.0",
		"rollup-plugin-node-resolve": "^3.4.0",
		"rollup-plugin-string": "^3.0.0",
		"snabbdom": "^0.7.2",
		"tslib": "^1.9.3",
		"typescript": "^5.4.5",
		"typescript-eslint": "^8.33.0",
		"vitest": "^0.34.6"
	},
	"dependencies": {
		"@types/node": "^8.10.36"
	}
}
